{
  "plugins": [
    "mocha"
  ],
  "rules": {
    "indent": [
      2,
      4,
      {"SwitchCase": 1}
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-undef": 0 ,
    "no-console": 0
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended"
}